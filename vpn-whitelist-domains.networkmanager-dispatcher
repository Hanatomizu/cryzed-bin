#!/usr/bin/env python

import sys

from plumbum import local

WHITELIST_DOMAINS_PATH = '/etc/vpn-whitelist-domains/domains'


def main(interface, action):
    # Only set up routes when a TUN interface is detected
    if not interface.startswith('tun'):
        return

    if action == 'up':
        local['vpn-whitelist-domains']('--file', WHITELIST_DOMAINS_PATH)
    elif action == 'down':
        local['vpn-whitelist-domains']('--file', WHITELIST_DOMAINS_PATH, '--remove')


if __name__ == '__main__':
    main(sys.argv[1], sys.argv[2])
