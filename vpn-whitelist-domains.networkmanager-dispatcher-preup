#!/usr/bin/env python

import sys

from plumbum import local

WHITELIST_DOMAINS_PATH = '/etc/vpn-whitelist-domains/domains'


def main(interface, action):
    if not action == 'vpn-pre-up':
        return

    local['vpn-whitelist-domains']('--file', WHITELIST_DOMAINS_PATH)


if __name__ == '__main__':
    main(sys.argv[1], sys.argv[2])
